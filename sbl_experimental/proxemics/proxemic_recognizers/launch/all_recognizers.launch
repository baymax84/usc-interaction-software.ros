<launch>
	<arg name="rate" default="30" />
	<arg name="manager" default="manager" />
	<arg name="nodelet" default="true" />

	<include file="$(find proxemic_recognizers)/launch/proxemic_recognizer.launch">
		<arg name="rate" value="$(arg rate)" />
		<arg name="manager" value="$(arg manager)" />
		<arg name="nodelet" value="$(arg nodelet)" />
	</include>
	<include file="$(find proxemic_recognizers)/launch/mehrabian_recognizer.launch">
		<arg name="rate" value="$(arg rate)" />
		<arg name="manager" value="$(arg manager)" />
		<arg name="nodelet" value="$(arg nodelet)" />
	</include>
	<include file="$(find proxemic_recognizers)/launch/hall_recognizer.launch">
		<arg name="rate" value="$(arg rate)" />
		<arg name="manager" value="$(arg manager)" />
		<arg name="nodelet" value="$(arg nodelet)" />
	</include>
</launch>
