<launch>
	<arg name="enable" />
	<arg name="name" />
	<arg name="use_nodelets" default="false" />
	<arg name="image" default="output_image" />
	<arg name="image_transport" default="raw" />

	<group if="$(arg enable)" >
		<group if="$(arg use_nodelets)" >
			<node
				pkg="nodelet"
				type="nodelet"
				name="$(arg name)_$(arg image)_view"
				output="screen"
				args="load image_view/image nodelet_manager image:=/$(arg name)/$(arg image) _image_transport:=$(arg image_transport)" />
		</group>
		<group unless="$(arg use_nodelets)" >
			<node
				pkg="image_view"
				type="image_view"
				name="$(arg name)_$(arg image)_view"
				output="screen"
				args="image:=/$(arg name)/$(arg image) _image_transport:=$(arg image_transport)" />
		</group>
	</group>
</launch>
